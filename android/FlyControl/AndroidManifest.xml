            android:name="com.lxyppc.flycontrol.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.lxyppc.flycontrol.ViewSettingActivity">
        </activity>
        <activity
            android:name="com.lxyppc.flycontrol.NetSettingActivity">
        </activity>
        <activity
            android:name="com.lxyppc.flycontrol.ButtonSettingActivity">
        </activity>
        <activity
            android:name="com.lxyppc.flycontrol.AxisSettingActivity">
        </activity>
        <activity
            android:name="com.lxyppc.flycontrol.BlueSettingActivity">
        </activity>
        <activity
            android:name="com.lxyppc.flycontrol.QuadParamSettingActivity">
        </activity>
        <activity
            android:name="com.lxyppc.flycontrol.SensorSettingActivity">
        </activity>
        <activity
            android:name="com.lxyppc.flycontrol.PIDSettingActivity">
        </activity>
        <activity
            android:name="com.lxyppc.flycontrol.HorizonSettingActivity">
        </activity>
    </application>
</manifest>